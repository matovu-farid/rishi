{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "dialog:default",
    "fs:default",
    "fs:allow-appdata-read",
    "fs:allow-appdata-write",
    "fs:allow-read-dir",
    "fs:allow-mkdir",
    "fs:allow-copy-file",
    "fs:allow-exists",
    "fs:allow-app-meta",
    {
      "identifier": "fs:scope",
      "allow": [
        {
          "path": "$APPDATA"
        },
        {
          "path": "$APPDATA/**/*"
        },
        {
          "path": "$HOME/**/*"
        },
        {
          "path": "$DOCUMENT/**/*"
        },
        {
          "path": "$DOWNLOAD/**/*"
        },
        {
          "path": "$DESKTOP/**/*"
        }
      ]
    }
  ]
}